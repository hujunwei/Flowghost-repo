<%= form_for @user do |f| %>  
  <% if @user.errors.any? %>  
    <div class="alert alert-danger">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
      <ul>
	<% @user.errors.full_messages.each do |msg| %>
	  <li><%= msg %></li>
	<% end %>
      </ul>
    </div>
  <% end %>  
  <div class="form-group">  
    <%= f.text_field :name,{:class=>"form-control",:placeholder=>"Name"}  %>  
  </div>  
  <div class="form-group">  
    <%= f.text_field :email,{:class=>"form-control",:placeholder=>"Email"}  %>  
  </div>  
  <div class="form-group">
    <%= f.select :identifiable_type, options_for_select([['Student' ,'StudentUser'], ['Instructor', 'InstructorUser']]) %>
  </div>
  <div class="form-group">  
    <%= f.password_field :password,{:class=>"form-control",:placeholder=>"Password"}  %>  
  </div>  
  <div class="form-group">  
    <%= f.password_field :password_confirmation,{:class=>"form-control",:placeholder=>"Confirm"}  %>  
  </div>  
  <div class="form-group">
    <%= f.submit "Submit" ,:class=>"btn btn-primary"%>
  </div>  
<% end %> 
